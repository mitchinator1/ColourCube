<?xml version="1.0" encoding="utf-8"?>
<settings>
  
  <text>
    <font>Arial</font>
    <key>title</key>
    <keynumber>3</keynumber>
    <position>0 5</position>
    <size>3</size>
    <colour>0.8 0.8 1.0</colour>
    <center>true</center>
  </text>
  
  <!--Menu Button-->
  <button hidden="false">
    <position>0 0</position>
    <size>16 8</size>
    <onMouseDown>Menu</onMouseDown>
    <text>
      <font>Arial</font>
      <key>menu</key>
      <keynumber>0</keynumber>
      <size>2.4</size>
      <halign>center</halign>
    </text>
    <element>
      <colour>0.4 0.5 0.7</colour>
    </element>
  </button>
  
  <!--Red Slider-->
  <slider hidden="false">
    <position>10 17</position>
    <size>25 5</size>
    <valuerange>0 1</valuerange>
    <value>0.5</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>0</keynumber>
      <colour>1 0.4 0.4</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <element>
      <width>1</width>
      <colour>1 1 1</colour>
      <depth>-0.5</depth>
    </element>
    <background>
      <thickness>0.5</thickness>
      <colour>1 1 1</colour>
      <depth>-0.1</depth>
    </background>
  </slider>

  <!--Green Slider-->
  <slider hidden="true">
    <position>10 25</position>
    <size>25 5</size>
    <valuerange>0 1</valuerange>
    <value>0.4</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>1</keynumber>
      <colour>0.4 1 0.4</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <element>
      <width>1</width>
      <colour>1 1 1</colour>
      <depth>-0.5</depth>
    </element>
    <background>
      <thickness>0.5</thickness>
      <colour>1 1 1</colour>
      <depth>-0.1</depth>
    </background>
  </slider>

  <!--Blue Slider-->
  <slider hidden="false">
    <position>10 33</position>
    <size>25 5</size>
    <valuerange>0 1</valuerange>
    <value>0.25</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>2</keynumber>
      <colour>0.4 0.4 1</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <element>
      <width>1</width>
      <colour>1 1 1</colour>
      <depth>-0.5</depth>
    </element>
    <background>
      <thickness>0.5</thickness>
      <colour>1 1 1</colour>
      <depth>-0.1</depth>
    </background>
  </slider>
  
  <background>
    <position>0 0</position>
    <size>100 100</size>
    <colour>0.5 0.7 0.4</colour>
    <depth>0.9</depth>
  </background>
    
</settings>