<?xml version="1.0" encoding="utf-8"?>
<settings>
  
  <text>
    <font>Arial</font>
    <key>title</key>
    <keynumber>3</keynumber>
    <position>0 5</position>
    <size>3</size>
    <colour>0.8 0.8 1.0</colour>
    <center>true</center>
  </text>
  
  <!--Menu Button-->
  <element type="button">
    <position>0 0</position>
    <size>16 8</size>
    <colour>0.4 0.5 0.7</colour>
    <onMouseDown>Menu</onMouseDown>
    <text>
      <font>Arial</font>
      <key>menu</key>
      <keynumber>0</keynumber>
      <size>2.4</size>
      <halign>center</halign>
    </text>
  </element>

  <!--Toggle Slider-->
  <element type="button">
    <position>20 0</position>
    <size>16 8</size>
    <colour>0.3 0.7 0.7</colour>
    <onMouseDown>Colour</onMouseDown>
    <text>
      <font>Arial</font>
      <key>menu</key>
      <keynumber>8</keynumber>
      <size>2.4</size>
      <halign>center</halign>
    </text>
  </element>

  <!--Red Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>10 17</position>
    <size>25 5</size>
    <colour>1 1 1</colour>
    <valuerange>0 1</valuerange>
    <value>0.9</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>0</keynumber>
      <colour>1 0.4 0.4</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>

  <!--Green Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>10 25</position>
    <size>25 5</size>
    <colour>1 1 1</colour>
    <valuerange>0 1</valuerange>
    <value>0.9</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>1</keynumber>
      <colour>0.4 1 0.4</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>

  <!--Blue Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>10 33</position>
    <size>25 5</size>
    <colour>1 1 1</colour>
    <valuerange>0 1</valuerange>
    <value>0.9</value>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>2</keynumber>
      <colour>0.4 0.4 1</colour>
      <size>1.25</size>
      <halign>left</halign>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>
  
  <element type="colourchooser">
    <position>0 0</position>
    <size>100 100</size>
    <colour>0.9 0.9 0.9</colour>
    <depth>0.9</depth>
  </element>
    
</settings>