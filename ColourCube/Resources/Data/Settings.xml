<?xml version="1.0" encoding="utf-8"?>
<settings>
  
  <!--Title-->
  <Text>
    <font>Arial</font>
    <key>title</key>
    <keynumber>3</keynumber>
    <position>0 5</position>
    <size>3</size>
    <colour>0.8 0.5 0.2</colour>
    <halign>center</halign>
  </Text>

  <!--Menu Drop-Down-->
  <Dropdown>
    <position>0 0</position>
    <size>12 6</size>
    <colour>0.8 0.4 0.15</colour>
    <onMouseOver>ShowMenu</onMouseOver>
    <onMouseOut>HideMenu</onMouseOut>
    <Text>
      <font>Arial</font>
      <key>EditorBarMenu</key>
      <size>2</size>
      <colour>0.95 0.7 0.6</colour>
      <halign>center</halign>
    </Text>
    <Button>
      <hidden>true</hidden>
      <position>0 6</position>
      <size>12 6</size>
      <colour>0.7 0.35 0.1</colour>
      <onMouseDown>Menu</onMouseDown>
      <Text>
        <font>Arial</font>
        <key>EditorMenuExit</key>
        <size>2</size>
        <colour>0.95 0.7 0.6</colour>
        <halign>center</halign>
      </Text>
    </Button>
  </Dropdown>

  <Scrollbox>
    <position>5 20</position>
    <depth>-0.3</depth>
    <size>30 30</size>
    <colour>0.7 0.8 0.7</colour>
  </Scrollbox>

  <!--Background-->
  <Element>
    <position>0 0</position>
    <size>100 100</size>
    <colour>0.2 0.4 0.7</colour>
    <depth>0.9</depth>
  </Element>
    
</settings>