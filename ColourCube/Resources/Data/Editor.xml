<?xml version="1.0" encoding="utf-8"?>
<editor>
  
  <!--Menu Drop-Down-->
  <Dropdown>
    <position>0 0</position>
    <size>12 6</size>
    <colour>0.4 0.5 0.7</colour>
    <Text>
      <font>Arial</font>
      <key>EditorBarMenu</key>
      <size>2</size>
      <halign>center</halign>
    </Text>
    <Button>
      <hidden>true</hidden>
      <position>0 6</position>
      <size>12 6</size>
      <colour>0.25 0.4 0.7</colour>
      <onMouseDown>Load</onMouseDown>
      <Text>
        <font>Arial</font>
        <key>EditorMenuLoad</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
    </Button>
    <Button>
    <hidden>true</hidden>
    <position>0 12</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseDown>Save</onMouseDown>
    <Text>
      <font>Arial</font>
      <key>EditorMenuSave</key>
      <size>2</size>
      <halign>center</halign>
    </Text>
  </Button>
    <Button>
      <hidden>true</hidden>
      <position>0 18</position>
      <size>12 6</size>
      <colour>0.25 0.4 0.7</colour>
      <onMouseDown>Menu</onMouseDown>
      <Text>
        <font>Arial</font>
        <key>EditorMenuExit</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
    </Button>
  </Dropdown>
  
  <!--Edit Drop-Down-->
  <Dropdown>
    <position>12 0</position>
    <size>12 6</size>
    <colour>0.4 0.5 0.7</colour>
    <Text>
      <font>Arial</font>
      <key>EditorBarEdit</key>
      <size>2</size>
      <halign>center</halign>
    </Text>
    <Dropdown>
      <hidden>true</hidden>
      <position>0 6</position>
      <size>12 6</size>
      <colour>0.4 0.5 0.7</colour>
      <Text>
        <font>Arial</font>
        <key>EditorEditCubes</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
      <Button>
        <hidden>true</hidden>
        <position>12 0</position>
        <size>12 6</size>
        <colour>0.35 0.4 0.7</colour>
        <onMouseDown>Toggle</onMouseDown>
        <Text>
          <font>Arial</font>
          <key>EditorEditCubes</key>
          <keynumber>1</keynumber>
          <size>2</size>
          <halign>center</halign>
        </Text>
      </Button>
    </Dropdown>
    <Button>
      <id>ColourChooser</id>
      <hidden>true</hidden>
      <position>0 12</position>
      <size>12 6</size>
      <colour>0.35 0.4 0.7</colour>
      <onMouseDown>Show</onMouseDown>
      <Text>
        <font>Arial</font>
        <key>EditorEditColours</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
    </Button>
  </Dropdown>
  
  <!--Colour Popup-->
  <Popup>
    <id>ColourChooser</id>
    <hidden>true</hidden>
    <position>25 40</position>
    <size>50 35</size>
    <colour>0.8 0.8 0.8</colour>
    <depth>0.1</depth>
    <Element>
      <position>32 5</position>
      <size>15 20</size>
      <colour>1 1 1</colour>
      <depth>-0.8</depth>
    </Element>
    <Slider>
      <position>8 8</position>
      <size>20 0.5</size>
      <colour>1 1 1</colour>
      <value>0.4</value>
      <valuerange>0 1</valuerange>
      <depth>-0.8</depth>
      <Text>
        <font>Arial</font>
        <key>slider</key>
        <keynumber>0</keynumber>
        <colour>1 0.4 0.4</colour>
        <size>1.25</size>
        <indent>-4.5 -1.5</indent>
      </Text>
      <Element>
        <size>1 5</size>
        <depth>-0.9</depth>
      </Element>
    </Slider>
    <Slider>
      <position>8 14</position>
      <size>20 0.5</size>
      <colour>1 1 1</colour>
      <value>0.6</value>
      <valuerange>0 1</valuerange>
      <depth>-0.8</depth>
      <Text>
        <font>Arial</font>
        <key>slider</key>
        <keynumber>1</keynumber>
        <colour>0.4 1 0.4</colour>
        <size>1.25</size>
        <indent>-6.5 -1.5</indent>
      </Text>
      <Element>
        <size>1 5</size>
        <depth>-0.9</depth>
      </Element>
    </Slider>
    <Slider>
      <position>8 20</position>
      <size>20 0.5</size>
      <colour>1 1 1</colour>
      <value>0.8</value>
      <valuerange>0 1</valuerange>
      <depth>-0.8</depth>
      <Text>
        <font>Arial</font>
        <key>slider</key>
        <keynumber>2</keynumber>
        <colour>0.4 0.4 1</colour>
        <size>1.25</size>
        <indent>-4.8 -1.5</indent>
      </Text>
      <Element>
        <size>1 5</size>
        <depth>-0.9</depth>
      </Element>
    </Slider>
    <Button>
      <hidden>true</hidden>
      <position>10 28</position>
      <size>10 6</size>
      <colour>0.25 0.4 0.7</colour>
      <onMouseDown>AddColour</onMouseDown>
      <depth>-0.8</depth>
      <Text>
        <font>Arial</font>
        <key>EditorPopupAdd</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
    </Button>
    <Button>
      <hidden>true</hidden>
      <position>30 28</position>
      <size>10 6</size>
      <colour>0.25 0.4 0.7</colour>
      <onMouseDown>Hide</onMouseDown>
      <depth>-0.8</depth>
      <Text>
        <font>Arial</font>
        <key>EditorPopupClose</key>
        <size>2</size>
        <halign>center</halign>
      </Text>
    </Button>
  </Popup>

</editor>