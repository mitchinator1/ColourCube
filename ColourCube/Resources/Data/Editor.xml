<?xml version="1.0" encoding="utf-8"?>
<editor>
  
  <!--Menu Drop-Down-->
  <element type="button">
    <position>0 0</position>
    <size>12 6</size>
    <colour>0.4 0.5 0.7</colour>
    <onMouseOver>ToggleMenu</onMouseOver>
    <text>
      <font>Arial</font>
      <key>EditorBarMenu</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>

  <element type="button">
    <hidden>true</hidden>
    <position>0 6</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseDown>Load</onMouseDown>
    <text>
      <font>Arial</font>
      <key>EditorMenuLoad</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>
  
  <element type="button">
    <hidden>true</hidden>
    <position>0 12</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseDown>Save</onMouseDown>
    <text>
      <font>Arial</font>
      <key>EditorMenuSave</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>
  
  <element type="button">
    <hidden>true</hidden>
    <position>0 18</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseDown>Menu</onMouseDown>
    <text>
      <font>Arial</font>
      <key>EditorMenuExit</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>
  
  <!--Edit Drop-Down-->
  <element type="button">
    <position>12 0</position>
    <size>12 6</size>
    <colour>0.4 0.5 0.7</colour>
    <onMouseOver>ToggleEdit</onMouseOver>
    <text>
      <font>Arial</font>
      <key>EditorBarEdit</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>

  <element type="button">
    <hidden>true</hidden>
    <position>12 6</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseDown>Toggle</onMouseDown>
    <text>
      <font>Arial</font>
      <key>EditorEditCubes</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>
  
  <element type="button">
    <hidden>true</hidden>
    <position>12 12</position>
    <size>12 6</size>
    <colour>0.25 0.4 0.7</colour>
    <onMouseOver>ToggleColour</onMouseOver>
    <onMouseDown>AddColour</onMouseDown>
    <text>
      <font>Arial</font>
      <key>EditorEditColours</key>
      <size>2</size>
      <halign>center</halign>
    </text>
  </element>
  
  <!--Red Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>32 12</position>
    <size>20 5</size>
    <colour>1 1 1</colour>
    <value>1</value>
    <valuerange>0 1</valuerange>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>0</keynumber>
      <colour>1 0.4 0.4</colour>
      <size>1.25</size>
      <indent>-4.5 0.25</indent>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>

  <!--Green Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>32 18</position>
    <size>20 5</size>
    <colour>1 1 1</colour>
    <value>1</value>
    <valuerange>0 1</valuerange>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>1</keynumber>
      <colour>0.4 1 0.4</colour>
      <size>1.25</size>
      <indent>-6.5 0.25</indent>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>

  <!--Blue Slider-->
  <element type="slider">
    <hidden>true</hidden>
    <position>32 24</position>
    <size>20 5</size>
    <colour>1 1 1</colour>
    <value>1</value>
    <valuerange>0 1</valuerange>
    <text>
      <font>Arial</font>
      <key>slider</key>
      <keynumber>2</keynumber>
      <colour>0.4 0.4 1</colour>
      <size>1.25</size>
      <indent>-4.8 0.25</indent>
    </text>
    <slider>
      <width>1</width>
      <depth>-0.5</depth>
    </slider>
    <background>
      <thickness>0.5</thickness>
      <depth>-0.4</depth>
    </background>
  </element>

  <element type="colourchooser">
    <hidden>true</hidden>
    <position>18 34</position>
    <size>5 6</size>
    <colour>0.9 0.9 0.9</colour>
    <depth>-0.6</depth>
  </element>
  
</editor>